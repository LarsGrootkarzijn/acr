{
    "_comment": "Keys starting with _ are commented out",
    "action_plugins": [
        {
            "active-monitor": {
                "enabled": true
            }
        },
        {
            "event-logger": {
                "enabled": true,
                "event_types": [
                    "state",
                    "song",
                    "loop",
                    "capabilities",
                    "position",
                    "song_information_update",
                    "state_changed"
                ],
                "log_level": "info",
                "only_active": false
            }
        },
        {
            "lastfm": {
                "enabled": true,
                "api_key": "",
                "api_secret": "",
                "scrobble": true
            }
        }    ],
    "services": {
        "webserver": {
            "enable": true,
            "host": "0.0.0.0",
            "port": 1080,
            "_static_routes": [
                {
                    "url_path": "/web",
                    "directory": "/usr/share/hifiberry-audiocontrol/sample-web"
                }
            ]
        },
        "cache": {
            "attribute_cache_path": "/var/lib/audiocontrol/cache/attributes",
            "image_cache_path": "/var/lib/audiocontrol/cache/images"
        },
        "security_store": {
            "path": "/var/lib/audiocontrol/security_store.json"
        },
        "musicbrainz": {
            "enable": true,
            "rate_limit_ms": 1000
        },    
        "theaudiodb": {
            "enable": true,
            "api_key": "", 
            "rate_limit_ms": 500
        },
        "lastfm": {
            "enable": true,
            "api_key": "",
            "api_secret": "",
            "now_playing_enabled": true,
            "scrobble": true 
        },
        "spotify": {
            "enable": true,
            "oauth_url": "https://oauth.hifiberry.com/spotify/",
            "debug_mode": true,
            "api_enabled": false,
            "client_id": "",            
            "client_secret": ""
        }
    },
    "players": [
        {
            "mpd": {
                "enable": true,
                "host": "localhost",
                "port": 6600,
                "load_on_startup": true,
                "artist_separator": [",", "feat. "],
                "enhance_metadata": true
            }
        },
        {
            "raat": {
                "enable": true,
                "metadata_pipe": "/var/lib/raat/metadata_pipe",
                "control_pipe": "/var/lib/raat/control_pipe",
                "reopen_metadata_pipe": true
            }
        },
        {
            "librespot": {
                "enable": true,
                "process_name": "/usr/bin/librespot",
                "on_pause_event": "systemd"
            }
        },
        {
            "lms": {
                "enable": true,
                "server": null,
                "port": 9000,
                "autodiscovery": true,
                "player_name": null,
                "player_mac": [],
                "reconnection_interval": 30,
                "polling_interval": 30
            }
        },
        {
            "_shairport": {
                "enable": true,
                "poll_interval": 1.0,
                "_comment": "systemd_service: Use when AirPlay 2 mode disables MPRIS controls",
                "systemd_service": "shairport-sync"
            }
        },
        {
            "_mpris": {
                "enable": true,
                "bus_name": "org.mpris.MediaPlayer2.vlc",
                "poll_interval": 1.0
            }
        }
    ]
}
