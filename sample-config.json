{
    "api": {
        "enable": true,
        "host": "0.0.0.0",
        "port": 1080
    },
    "action_plugins": [
        {
            "active-monitor": {
                "enabled": true
            }
        }
    ],
    "event_filters": [
        {
            "event-logger": {
                "enabled": false,
                "event_types": [
                    "state",
                    "song",
                    "loop",
                    "capabilities"
                ],
                "log_level": "debug",
                "only_active": false
            }
        }
    ],
    "players": [
        {
            "mpd": {
                "enable": true,
                "host": "localhost",
                "port": 6600
            }
        },
        {
            "raat": {
                "enable": true,
                "event_pipe": "/var/run/raat/metadata_pipe",
                "control_pipe": "/var/run/raat/control_pipe",
                "reopen_event_pipe": true
            }
        },
        {
            "librespot": {
                "enable": true,
                "event_pipe": "/var/run/librespot/events_pipe",
                "process_name": "/usr/bin/librespot",
                "reopen_event_pipe": true
            }
        },
        {
            "null": {
                "enable": false
            }
        }
    ]
}