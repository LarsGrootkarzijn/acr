{
  "players": [
    {
      "name": "mpd",
      "host": "localhost",
      "port": 6600,
      "load_mpd_library": true,
      "enhance_metadata": true,
      "extract_coverart": true,
      "music_directory": "/var/lib/mpd/music",
      "max_reconnect_attempts": 5,
      "artist_separator": [", ", " feat. ", " ft. ", " & "]
    }
  ],
  "webserver": {
    "host": "0.0.0.0",
    "port": 81
  },
  "_comments": {
    "music_directory": "Optional: Specify the MPD music directory path for cover art extraction. If empty or not specified, audiocontrol will automatically detect it by parsing /etc/mpd.conf. This eliminates blocking TCP connections to MPD for directory detection.",
    "music_directory_examples": [
      "/var/lib/mpd/music",
      "/music", 
      "/home/user/Music",
      "/srv/music"
    ],
    "music_directory_auto_detection": "When music_directory is not configured, audiocontrol will parse /etc/mpd.conf looking for the 'music_directory' setting and use that path automatically."
  }
}
