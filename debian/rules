#!/usr/bin/make -f

export DH_VERBOSE=1
export SKIP_BUILD
export CARGO_HOME = $(CURDIR)/debian/cargo_home
export RUSTUP_HOME = $(CURDIR)/debian/rustup_home

%:
	dh $@

override_dh_auto_configure:
	# Install Rust via rustup if not available or if cargo version is too old
	if ! which cargo >/dev/null 2>&1 || ! cargo --version | grep -q "1\.[8-9][0-9]\|1\.[0-9][0-9][0-9]"; then \
		mkdir -p $(RUSTUP_HOME) $(CARGO_HOME); \
		curl https://sh.rustup.rs -sSf | \
		RUSTUP_HOME=$(RUSTUP_HOME) CARGO_HOME=$(CARGO_HOME) \
		sh -s -- -y --no-modify-path; \
	fi

override_dh_auto_build:
	if [ "$$SKIP_BUILD" = "1" ]; then \
		echo "Skipping cargo build as requested"; \
	else \
		PATH="$(CARGO_HOME)/bin:$(PATH)" HOME=/tmp cargo build --release; \
	fi

override_dh_auto_install:
	# Create required directories
	mkdir -p debian/acr/usr/bin
	mkdir -p debian/acr/usr/share/acr
	mkdir -p debian/acr/usr/share/acr/sample-web
	mkdir -p debian/acr/usr/lib/systemd/system
	# Install main binary
	if [ -f target/release/acr ]; then \
		cp target/release/acr debian/acr/usr/bin/; \
		chmod +x debian/acr/usr/bin/acr; \
	fi
	# Install CLI tools if they exist
	for tool in acr_dumpcache acr_lms_client acr_send_update; do \
		if [ -f "target/release/$$tool" ]; then \
			cp "target/release/$$tool" debian/acr/usr/bin/; \
			chmod +x "debian/acr/usr/bin/$$tool"; \
		fi; \
	done
	# Install config samples
	cp acr.json.sample debian/acr/usr/share/acr/
	# Install example app
	if [ -d example-app ]; then \
		cp -r example-app/* debian/acr/usr/share/acr/sample-web/; \
	fi
	# Install systemd service
	cp debian/acr.service debian/acr/usr/lib/systemd/system/

override_dh_auto_clean:
	dh_auto_clean
	rm -rf target/
	rm -rf $(CARGO_HOME)
	rm -rf $(RUSTUP_HOME)

override_dh_installsystemd:
	dh_installsystemd --restart-after-upgrade

override_dh_strip:
	# Skip debug symbol extraction - don't create dbgsym package
	dh_strip --no-automatic-dbgsym
